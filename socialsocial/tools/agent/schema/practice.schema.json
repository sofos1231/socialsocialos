{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Practice Category Ingest",
  "type": "object",
  "required": ["category", "missions"],
  "properties": {
    "category": {
      "type": "object",
      "required": ["name", "icon"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "icon": { "type": "string", "minLength": 1 },
        "subtitle": { "type": "string" },
        "difficulty": { "type": "string", "enum": ["normal", "hard", "mixed"] }
      }
    },
    "missions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["order", "title", "type"],
        "properties": {
          "order": { "type": "integer", "minimum": 1 },
          "title": { "type": "string", "minLength": 1 },
          "type": { "type": "string", "enum": ["chat", "video", "quick", "boss"] },
          "status": { "type": "string", "enum": ["locked", "unlocked", "completed", "in-progress"], "default": "unlocked" },
          "subtitle": { "type": "string" },
          "time": { "type": "string" },
          "estDuration": { "type": "string" },
          "xp": { "type": "integer", "minimum": 0 },
          "xpReward": { "type": "integer", "minimum": 0 },
          "progress": { "type": "integer", "minimum": 0, "maximum": 100 },
          "tags": { "type": "array", "items": { "type": "string" } },
          "coverImage": { "type": "string" },
          "videoUrl": { "type": "string" },
          "road": { "type": "boolean" }
        }
      }
    }
  }
}


