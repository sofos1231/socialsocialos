// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  sessionVersion Int  @default(0)
  streakCurrent   Int      @default(0)
  streakLastActiveAt DateTime?
  passwordHash String
}

model IdempotencyKey {
  id           String   @id @default(cuid())
  key          String
  userId       String
  route        String
  bodyHash     String
  status       Int
  responseJson String
  createdAt    DateTime @default(now())
  expiresAt    DateTime

  @@unique([key, userId, route])
}

model EconomyWallet {
  userId   String   @id
  coins    Int      @default(0)
  diamonds Int      @default(0)
  tickets  Int      @default(0)
  updatedAt DateTime @updatedAt
}

model ShopCatalog {
  key      String  @id
  type     String
  pricing  Json
  bonus    Json?
  limits   Json?
  active   Boolean @default(true)
}

model PowerupInventory {
  id        String   @id @default(cuid())
  userId    String
  type      String
  charges   Int      @default(0)
  startsAt  DateTime?
  expiresAt DateTime?
  createdAt DateTime  @default(now())

  @@index([userId, type])
}

model Entitlement {
  id       String   @id @default(cuid())
  userId   String
  key      String
  active   Boolean  @default(true)
  startsAt DateTime
  endsAt   DateTime?
  source   String

  @@index([userId, key, active])
}

model Purchase {
  id         String   @id @default(cuid())
  userId     String
  platform   String
  sku        String
  qty        Int      @default(1)
  price      Float?
  currency   String?
  storeTxId  String   @unique
  status     String
  purchasedAt DateTime
  expiresAt  DateTime?
  meta       Json?
}

model Event {
  id      String   @id @default(cuid())
  userId  String
  name    String
  props   Json?
  ts      DateTime

  @@index([userId, ts])
}

model MetricsWeekly {
  userId    String
  weekStart DateTime
  xp        Int      @default(0)
  fillerPerMin Float?
  confidence   Float?
  energy       String?
  sentiment    Float?
  updatedAt    DateTime @updatedAt

  @@id([userId, weekStart])
}

model LimitedDeal {
  id        String   @id @default(cuid())
  key       String
  startsAt  DateTime
  endsAt    DateTime
  rules     Json
  active    Boolean  @default(true)

  @@index([key, active])
}

model RefreshToken {
  id         String   @id @default(cuid())
  userId     String
  tokenHash  String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  revoked    Boolean  @default(false)

  @@index([userId, expiresAt, revoked])
}

model Subscription {
  id         String   @id @default(cuid())
  userId     String
  store      String
  productId  String
  status     String
  periodEnd  DateTime?
  receiptKey String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId, status])
}

model UserEntitlement {
  id       String   @id @default(cuid())
  userId   String
  key      String
  active   Boolean  @default(true)
  source   String
  startsAt DateTime @default(now())
  endsAt   DateTime?

  @@index([userId, key, active])
}


// === Refresh Token storage ===
model RefreshToken {
  id         String   @id @default(cuid())
  userId     String
  token      String   @unique
  revoked    Boolean  @default(false)
  createdAt  DateTime @default(now())
  expiresAt  DateTime?

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, revoked])
}

// === Subscriptions (IAP receipts normalized) ===
enum Store {
  APPLE
  GOOGLE
  RC
}

model Subscription {
  id          String   @id @default(cuid())
  userId      String
  store       Store
  productId   String
  receiptKey  String   @unique    // e.g. `${store}:${token}` or RevenueCat id
  source      String?              // optional: 'IAP', 'ADMIN', etc.
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, active])
}

