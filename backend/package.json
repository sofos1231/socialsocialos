{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "dev:api": "npm run start:dev",
    "dev:dash": "vite",
    "dev": "node -e \"process.env.NODE_EXTRA_CA_CERTS=process.env.NODE_EXTRA_CA_CERTS||'./certs/rds-global-bundle.pem'; require('child_process').spawn('nest',['start','--watch'],{stdio:'inherit',shell:true});\"",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:migrate": "prisma migrate dev --name init",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "ts-node --transpile-only prisma/seed.ts",
    "db:reset": "npm run prisma:generate && prisma migrate reset --force && npm run db:seed",
    "certs:fetch": "mkdir -p certs && (curl -sfL https://truststore.pki.rds.amazonaws.com/global/global-bundle.pem -o certs/rds-global-bundle.pem || powershell -Command \"[Net.ServicePointManager]::SecurityProtocol = 'Tls12'; (New-Object Net.WebClient).DownloadFile('https://truststore.pki.rds.amazonaws.com/global/global-bundle.pem', 'certs/rds-global-bundle.pem')\")",
    "db:seed:catalog": "ts-node --transpile-only scripts/seed-catalog.ts",
    "deals:create:double": "ts-node --transpile-only scripts/create-deal.ts",
    "test:smoke": "jest -i test/e2e/smoke.spec.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/helmet": "^8.1.0",
    "@fastify/static": "^7.0.4",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-fastify": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@prisma/client": "^5.0.0",
    "dotenv": "^17.2.2",
    "joi": "^17.13.3",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^2.0.0",
    "ioredis": "^5.3.2",
    "pg": "^8.16.3",
    "prisma": "^5.0.0",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1",
    "uuid": "^9.0.1",
    "bcrypt": "^5.1.1",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.16",
    "concurrently": "^9.2.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vite": "^7.1.2"
  }
}
