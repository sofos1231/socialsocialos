{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "db:generate": "pnpm exec prisma generate",
    "db:push": "pnpm exec prisma db push",
    "seed": "ts-node --transpile-only prisma/seed.ts",
    "start:dev": "nest start --watch",
    "dev:api": "npm run start:dev",
    "dev:dash": "vite",
    "postinstall": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "ts-node --transpile-only prisma/seed.ts",
    "db:reset": "npm run db:generate && prisma migrate reset --force && npm run db:seed",
    "certs:fetch": "mkdir -p certs && (curl -sfL https://truststore.pki.rds.amazonaws.com/global/global-bundle.pem -o certs/rds-global-bundle.pem || powershell -Command \"[Net.ServicePointManager]::SecurityProtocol = 'Tls12'; (New-Object Net.WebClient).DownloadFile('https://truststore.pki.rds.amazonaws.com/global/global-bundle.pem', 'certs/rds-global-bundle.pem')\")",
    "db:seed:catalog": "ts-node --transpile-only scripts/seed-catalog.ts",
    "deals:create:double": "ts-node --transpile-only scripts/create-deal.ts",
    "test:e2e": "jest --runInBand --testPathPattern=test/e2e/.*\\.spec\\.ts$",
    "test:smoke": "jest -i test/e2e/smoke.spec.ts",
    "ci:openapi": "ts-node scripts/ci/openapi-diff.ts",
    "test:jwt": "node scripts/genToken.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/helmet": "^8.1.0",
    "@fastify/static": "^7.0.4",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@prisma/client": "5.22.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.2",
    "ioredis": "^5.3.2",
    "joi": "^17.13.3",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "prisma": "5.22.0",
    "prom-client": "^15.1.2",
    "jsonwebtoken": "^9.0.2",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/testing": "^11.1.8",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.16",
    "concurrently": "^9.2.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vite": "^7.1.2",
    "yaml": "^2.8.1",
    "ts-node-dev": "^2.0.0"
  }
}
